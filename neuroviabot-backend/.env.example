# ==========================================
# ⚙️ Backend API - Environment Variables
# ==========================================

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=5000
NODE_ENV=production

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
FRONTEND_URL=https://neuroviabot.xyz

# ==========================================
# DISCORD OAUTH
# ==========================================
DISCORD_CLIENT_ID=773539215098249246
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_CALLBACK_URL=https://neuroviabot.xyz/api/auth/callback

# ==========================================
# SESSION & SECURITY
# ==========================================
SESSION_SECRET=your_super_secret_session_key_here

# ==========================================
# DATABASE
# ==========================================
# MongoDB Connection String (for persistent AuditLog and data)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/neuroviabot?retryWrites=true&w=majority

# ==========================================
# BOT API INTEGRATION
# ==========================================
BOT_API_URL=http://localhost:3002
BOT_API_KEY=your_bot_api_key_here

# ==========================================
# CORS & SOCKET.IO
# ==========================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=https://neuroviabot.xyz,http://localhost:3001
# Allowed origins for Socket.IO
SOCKET_ALLOWED_ORIGINS=https://neuroviabot.xyz,http://localhost:3001

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT=100

# ==========================================
# OPTIONAL
# ==========================================
# Enable debug logs
DEBUG=false
