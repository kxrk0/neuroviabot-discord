# ==========================================
# ðŸ¤– NeuroViaBot - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# DISCORD BOT CONFIGURATION
# ==========================================
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=773539215098249246
DISCORD_CLIENT_SECRET=your_client_secret_here

# ==========================================
# API ENDPOINTS
# ==========================================
# Backend API URL (change for production)
BACKEND_URL=http://localhost:5000
# Bot internal API port
BOT_API_PORT=3002

# ==========================================
# DATABASE
# ==========================================
# MongoDB Connection String (for AuditLog and persistent data)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/neuroviabot?retryWrites=true&w=majority

# ==========================================
# SESSION & SECURITY
# ==========================================
# Secret for session encryption (generate a random string)
SESSION_SECRET=your_super_secret_session_key_here
# JWT Secret (if using JWT authentication)
JWT_SECRET=your_jwt_secret_here

# ==========================================
# DISCORD OAUTH (For Dashboard)
# ==========================================
DISCORD_CALLBACK_URL=https://neuroviabot.xyz/api/auth/callback

# ==========================================
# OPTIONAL SETTINGS
# ==========================================
# Bot embed color (hex without #)
EMBED_COLOR=7289DA
# Daily reward amount (NeuroCoin)
DAILY_AMOUNT=100
# Work command amount
WORK_AMOUNT=50
# Environment
NODE_ENV=production
